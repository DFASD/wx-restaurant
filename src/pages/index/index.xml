<view class="container">
  <!--顶部搜索栏-->
  <view class="search">
    <!--当前位置-->
    <view class="search-site triangle">广州</view>
    <input class="search-in iconfont icon-sousuo_sousuo" placeholder="请输入餐厅、 菜系、 商圈" />
  </view>
  <!--carousel-->
  <view class="swiper">
    <swiper indicator-dots="true" indicator-active-color="#fff" indicator-color="#ed4d30" autoplay="true" interval="5000" duration="500" circular="true" >
      <block wx:for="{{imgUrls}}">
        <swiper-item>
          <image src="{{item}}" class="slide-image"/>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class="nav">
    <navigator class="{{ item.navIcon }}" wx:for="{{ navList }}" wx:key="unique">
      {{ item.navTitle }}
    </navigator>
  </view>
</view>